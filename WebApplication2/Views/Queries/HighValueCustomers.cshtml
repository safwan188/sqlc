@model IEnumerable<HighValueCustomersViewModel>

<h2>High-Value Customers</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Total Transaction Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.TotalTransactionAmount</td>
            </tr>
        }
    </tbody>
</table>
