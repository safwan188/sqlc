@model IEnumerable<AccountBalanceStatusViewModel>

<h2>Account Balance Status</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Balance</td>
            </tr>
        }
    </tbody>
</table>
